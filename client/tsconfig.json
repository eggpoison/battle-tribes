{
   "compilerOptions": {
      "target": "es2015",
      "lib": [
         "dom",
         "dom.iterable",
         "esnext"
      ],
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "noEmit": false,
      "outDir": "./build",
      "jsx": "react-jsx",
      "sourceMap": true,
      "isolatedModules": false,
      "declaration": true,
      "paths": {
         "battletribes-shared/*": ["../shared/src/*"]
       }
   },
   "references": [
     { "path": "../shared" }
   ],
   "include": [
      "src",
      "node_modules/webgl-test-shared/**/*.d.ts"
   ]
}